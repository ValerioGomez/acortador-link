rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // Colección de Usuarios:
    match /users/{userId} {
      allow read, update: if request.auth != null && request.auth.uid == userId;
      allow create: if request.auth != null;
    }

    // Colección de Enlaces:
    match /links/{linkId} {
      // CUALQUIERA puede LEER enlaces (para redirección pública)
      allow read: if true;
      
      // SOLO el dueño puede CREAR, ACTUALIZAR, ELIMINAR
      allow create: if request.auth != null && request.auth.uid == request.resource.data.owner_uid;
      allow update, delete: if request.auth != null && request.auth.uid == resource.data.owner_uid;
      
      // SOLO el dueño puede LISTAR sus enlaces (para el dashboard)
      allow list: if request.auth != null;
    }

    // Colección de Logs de Clicks:
    match /click_logs/{linkId}/logs/{logId} {
      // CUALQUIERA puede crear un log de click
      allow create: if true;
      
      // SOLO el dueño del enlace puede leer los logs
      allow read, list: if request.auth != null && 
        exists(/databases/$(database)/documents/links/$(linkId)) &&
        get(/databases/$(database)/documents/links/$(linkId)).data.owner_uid == request.auth.uid;
    }

    // Por defecto, denegar todo lo demás
    match /{document=**} {
      allow read, write: if false;
    }
  }
}